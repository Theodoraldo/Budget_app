<h1 class="is-size-4 mb-3 has-text-grey is-flex is-justify-content-center has-text-weight-bold">Add Category</h1>

<div class="container" style="width: 90%;">
  <%= form_with scope: :group, url: groups_path do |form| %>
    <div class="mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "input" %>
    </div>

     <div class="mb-3">
      <%= form.label :icon %>
      <%= form.text_field :icon , class: "input" %>
    </div>

    <div>
      <%= form.submit "Save Category", class: "button is-info" %>
    </div>
  <% end %>
</div>